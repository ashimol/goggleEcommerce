	<section class="product spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<ul class="filter__controls">
						<h3 class="tittle-w3layouts my-lg-4 my-4">New Arrivals for you </h3>
					</ul>
				</div>
			</div>
			<div class="row row-pb-md">
				<% if (products && products.length > 0) { %>
				<% products.forEach(product => { %>
					<div class="col-md-3 col-lg-3 mb-4 text-center">
						<div class="product-entry border">
							<a href="/product-details/<%= product._id %>" class="prod-img">
								<img src="/uploads/product-images/<%= product.productImage[0] %>" class="img-fluid" alt="picture">
							</a>
							<div class="desc">
								<h5><a href="/product-details/<%= product._id %>"><%= product.productName %></a></h5>
								

								
									<%  if (products.salePrice < products.regularPrice) { %>
									
									  <span class="item_price">₹<%= products.salePrice %></span>
									  <del>₹<%= products.regularPrice %></del>
									<% } else { %>
									  
									  <span class="item_price">₹<%= product.regularPrice %></span>
									<% } %>
								  
								
							</div>
						</div>
					</div>
				<% }) %>
				<% } else { %>
					<p>No products found</p>
				<%}%>
			</div>
		</div>
