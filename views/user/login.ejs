<%- include("../../views/partials/user/header")%>
    <style>
      body,
      html {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f3f4f6;
        font-family: "Nunito Sans", sans-serif;
      }

      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
      }

      .card {
        width: 100%;
        max-width: 850px;
        border: none;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      }

      .login-section {
        display: flex;
        justify-content: space-between;
        background-color: #ffffff;
      }

      .login-form,
      .login-image {
        flex: 1;
        padding: 2rem;
      }

      .login-form {
        max-width: 50%;
      }

      .login-image {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        max-width: 50%;
        background-color: #f8f9fa;
      }

      .login-image img {
        max-width: 80%;
        height: auto;
      }

      .card-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #333;
        text-align: center;
        margin-bottom: 1rem;
      }

      .form-group label {
        font-size: 0.9rem;
        color: #555;
        font-weight: 600;
      }

      .form-control {
        font-size: 0.9rem;
        padding: 0.6rem;
        border-radius: 8px;
        border: 1px solid #ced4da;
      }

      .btn-primary {
        padding: 0.6rem 1.2rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        background-color: #4a90e2;
        border: none;
      }

      .btn-primary:hover {
        background-color: #357abd;
      }

      .social-btns {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
      }

      .social-btns a {
        color: #ffffff;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        background-color: #db4437;
      }

      .social-btns a:hover {
        background-color: #c23321;
      }

      .error-message {
        color: #ff4d4d;
        font-size: 0.75rem;
        margin-top: 5px;
      }

      .sign-up-link {
        color: #4a90e2;
        text-decoration: none;
        font-weight: 600;
      }

      .sign-up-link:hover {
        color: #357abd;
      }
    </style>
 
  <body>
    <div class="container">
      <div class="card">
        <div class="card-body login-section">
          <div class="login-form mt-5">
            <h3 class="card-title">Log In</h3>
            <form id="loginform" method="post" action="/login">
              <div class="form-group">
                <label for="email">Email address</label>
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  id="email"
                  placeholder="Enter email"
                />
                <div id="error1" class="error-message"></div>
              </div>
              <div class="form-group mt-3">
                <label for="password">Password</label>
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                  placeholder="Password"
                />
                <div id="error2" class="error-message"></div>
              </div>
              <%if(locals.message && message.length>0){%>
              <div class="alert alert-danger text-center mt-3">
                <%=message%>
              </div>
              <%}%>
              <div class="d-flex justify-content-between align-items-center mt-4">
                <button type="submit" class="btn btn-primary">Log In</button>
                <p class="mb-0">or log in with</p>
                <div class="social-btns">
                  <a href="/auth/google">
                    <i class="fab fa-google"></i>
                  </a>
                  
                </div>
              </div>
              <div class="text-center mt-3">
                <a href="#" class="sign-up-link">Not registered? Sign up</a>
              </div>
            </form>
          </div>
        </div>
        </div>
      </div>
   

