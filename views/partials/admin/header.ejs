    <script>
        $(document).ready(function() {
    const currentUrl = window.location.pathname;
    $('.nav-list .nav-item a').each(function() {
        if ($(this).attr('href') === currentUrl) {
            $(this).addClass('active');
        }
    });
});
    </script>