       /* General Styles */
body {
    font-family: Arial, sans-serif;
    color: #333;
    background-color: #f4f6f8;
}

/* Error Message Styling */
.error-message {
    color: red;
    font-size: 0.85rem;
    margin-top: 5px;
}

/* Content Styling */
.content-main {
    padding: 20px;
}

.content-header {
    border-bottom: 1px solid #ddd;
    margin-bottom: 20px;
    padding-bottom: 10px;
}

.content-title {
    font-size: 1.5rem;
    font-weight: bold;
    color: #333;
}

/* Card Styling */
.card {
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #fff;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}

.card-header h4 {
    font-size: 1.2rem;
    font-weight: bold;
    color: #333;
}

.card-body {
    padding: 20px;
}

.mb-4 {
    margin-bottom: 20px;
}

/* Form Styles */
.form-label {
    font-weight: bold;
    color: #555;
}

.form-control {
    height: 40px;
    border-radius: 5px;
    border: 1px solid #ddd;
    padding: 0.5rem;
    font-size: 0.95rem;
    color: #555;
}

.form-control:focus {
    border-color: #007bff;
    box-shadow: none;
}

.form-select {
    height: 40px;
    border-radius: 5px;
    border: 1px solid #ddd;
    padding: 0.5rem;
    font-size: 0.95rem;
    color: #555;
}

button[type="button"] {
    color: #fff;
    background-color: #007bff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: bold;
}

button[type="button"]:hover {
    background-color: #0056b3;
}

/* Image and Thumbnail Styling */
.thumbnails-container {
    display: flex;
    gap: 10px;
    padding: 10px 0;
    overflow-x: auto;
}

.thumbnail img {
    width: 100px;
    height: auto;
    border-radius: 4px;
}

.image-cropper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 300px;
    height: 200px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #f9f9f9;
}

#imgView1, #imgView2, #imgView3, #imgView4 {
    max-width: 100%;
    max-height: 150px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

#addedImagesContainer img {
    width: 80px;
    height: 80px;
    border: 1px solid #ddd;
    border-radius: 4px;
    object-fit: cover;
}

#saveButton1, #saveButton2, #saveButton3, #saveButton4 {
    padding: 6px 10px;
    font-size: 0.85rem;
    background-color: #28a745;
}

#saveButton1:hover, #saveButton2:hover, #saveButton3:hover, #saveButton4:hover {
    background-color: #218838;
}

/* Button Styling */
.btn {
    padding: 10px 20px;
    font-size: 1rem;
    font-weight: bold;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.btn:hover {
    background-color: #0056b3;
}

.btn-md {
    font-size: 1rem;
}

.font-sm {
    font-size: 0.9rem;
}

.hover-up:hover {
    transform: translateY(-2px);
    transition: 0.2s ease;
}

</style>
